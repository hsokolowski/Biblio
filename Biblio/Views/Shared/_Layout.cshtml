<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bilioteka Projekt</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    
    <link href="~/Content/fontello/css/fontello.css" rel="stylesheet" type="text/css"/>
    <style>
        body {
            padding-top: 0px;
        }
        
        #stopka {
            text-align: center;
            margin-left: auto;
            margin-right: auto;
            background-color: #45A29E;
            width: 100%;
            clear:both;
            position:fixed;
        }
        .navigator{
            height: 10px;
            /*background-color: slategrey;*/
            background-color: #C5C6C7;
        }
        .body-content{
            
        }
        .link {
            background-color: grey;
            width: 60px;
            height: 30px;
            border-bottom-left-radius: 10px;
            border-bottom-right-radius: 10px;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            text-align: center;
            text-decoration: none;
        }

        .none {
            text-decoration: none;
            color: white;
            padding-top: 5px;
        }
        #tab{
            
            
        }
        table {
            margin-left: auto;
            margin-right: auto;
        }
        th, td{
            width:100px;
        }
        .form-control:hover {
            transition: all 500ms linear;
            background-color: #ccffff;
        }
        .backtolist:hover {
            color: black;
        }
        hr{
            height:10px;
        }
    </style>
</head>
<body> 
    <div id="divwithimg">
        <div id="main">
            @Html.Partial("_HeaderNavBar", Session["login"])
            <div class="navigator">

            </div>
            <div class="container body-content">
                @RenderBody()
                <hr />

            </div>
            <footer>
                <p id="stopka">&copy; @DateTime.Now.Year - PAWWw.NET Projekt Hubert Sokołowski</p>
            </footer>

            <script src="~/Scripts/jquery-1.10.2.min.js"></script>
            <script src="~/Scripts/bootstrap.min.js"></script>
            <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
            <script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type='text/javascript'></script>
        </div>
    </div>
</body>
</html>